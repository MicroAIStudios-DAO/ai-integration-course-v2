{
    "functions": [
        {
            "source": "functions",
            "runtime": "nodejs22",
            "region": "us-central1",
            "serviceAccount": "firebase-app-hosting-compute@ai-integra-course-v2.iam.gserviceaccount.com",
            "predeploy": [
                "npm --prefix \"$RESOURCE_DIR\" run build"
            ],
            "ignore": [
                "node_modules",
                ".git",
                "firebase-debug.log",
                "firebase-debug.*.log",
                "*.local"
            ]
        }
    ],
    "firestore": {
        "database": "(default)",
        "location": "nam5",
        "rules": "premium_rules.rules",
        "indexes": "firestore.indexes.json"
    },
    "storage": {
        "rules": "storage.rules"
    },
    "hosting": {
        "target": "main",
        "public": "build",
        "ignore": [
            "firebase.json",
            "**/.*",
            "**/node_modules/**"
        ],
        "rewrites": [
            {
                "source": "/api/tutor",
                "function": "tutor"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ],
        "headers": [
            {
                "source": "**/*.@(jpg|jpeg|gif|png|svg|webp)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            },
            {
                "source": "**/*.@(js|css)",
                "headers": [
                    {
                        "key": "Cache-Control",
                        "value": "max-age=31536000"
                    }
                ]
            }
        ]
    }
}
